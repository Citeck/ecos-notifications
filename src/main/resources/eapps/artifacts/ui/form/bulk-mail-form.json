            "tooltip": {
              "ru": "Базовый RecordRef по которому отправляется уведомление"
            },
            "hidden": true,
            "defaultValue": "",
            "refreshOn": [],
            "logic": [
              {
                "name": "is template selected",
                "trigger": {
                  "type": "javascript",
                  "javascript": "return !!data.template"
                },
                "actions": [
                  {
                    "name": "display",
                    "type": "property",
